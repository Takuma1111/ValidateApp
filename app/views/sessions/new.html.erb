<h1>ログイン</h1>
<%= form_with scope: :session ,url: login_path ,local: true do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit "Log in" %>
<% end %>

<% if @error != '' %>
  <h1 style= "color:red"><%= @error %></h1>
<% end %>
